@model AVSModels.Models.MaterialModel

<style>
    .btm {
    margin-bottom:8px !important;
    }

    .serialPadding {
      
        padding-left: 20px;
    }
    .row{
        color:black!important;
        font-weight:500!important;
    }
   
    .panel-title{
        color:darkblue!important;
    }

    label {
        text-align: left !important;
        padding-right: 2px !important;
        padding-left: 2px !important;
    }
    
</style>
        @Html.HiddenFor(a => a.MaterialID)
        <div class="panel-heading">
            <div class="panel-title"><b>Add Material/Invoice</b></div>
        </div>
        <div class="panel-body">
            <div class="row btm">
                <div class="col-md-12">
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.Label("Vendor", htmlAttributes: new { @class = "control-label labelcss col-md-4" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(model => model.VendorId, new SelectList(ViewBag.vendors, "value", "text"), new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.VendorId, "", new { @class = "text-danger",@id= "Error_VendorId" })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaterialNo, htmlAttributes: new { @class = "control-label labelcss col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.MaterialNo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MaterialNo, "", new { @class = "text-danger", @id = "Error_MaterialNo" })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">

                        <div class="form-group">
                            @Html.LabelFor(model => model.InvoiceNo, htmlAttributes: new { @class = "control-label labelcss col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.InvoiceNo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.InvoiceNo, "", new { @class = "text-danger", @id = "Error_InvoiceNo" })
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="row btm">
                <div class="col-md-12">
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ShippingDate, htmlAttributes: new { @class = "control-label labelcss col-md-4", @style = "padding-right:2px!important; padding-left:2px !important; text-align:left!important;" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.ShippingDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                @Html.ValidationMessageFor(model => model.ShippingDate, "", new { @class = "text-danger", @id = "Error_ShippingDate" })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ReceivedDate, htmlAttributes: new { @class = "control-label labelcss col-md-4", @style = "padding-right:2px!important; padding-left:2px !important;" })
                            <div class="col-md-8" style="color:blue!important;">
                                @Html.EditorFor(model => model.ReceivedDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                @Html.ValidationMessageFor(model => model.ReceivedDate, "", new { @class = "text-danger", @id = "Error_ReceivedDate" })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4"></div>
                </div>
            </div>
            @if (Model.MaterialID != 0)
            {
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-10"></div>
                            <div class="col-md-2">
                                <input type="button" value="Save Changes" onclick="UpdateMaterial()" class="btn btn-primary pull-right" />
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>
        
       
    



